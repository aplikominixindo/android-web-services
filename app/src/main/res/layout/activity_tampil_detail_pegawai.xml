<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:text="ID Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editIdPegawai"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Nama Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editNamaPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Jabatan Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editJabatanPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Gaji Pegawai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editGajiPegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnUbahData"
        android:text="UBAH DATA PEGAWAI"
        android:textColor="@color/colorAccent"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnHapusData"
        android:text="HAPUS DATA PEGAWAI"
        android:textColor="@color/colorAccent"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>